# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=
CONVEX_SITE_URL=

# Google Auth Config
GOOGLE_CLOUD_ID=
GOOGLE_CLIENT_SECRET=

# Polar Access Token (for API access)
POLAR_ACCESS_TOKEN=
# Organization Access Token (for server-side use only)
POLAR_WEBHOOK_SECRET=

# Environment setting for Polar (sandbox or production)
POLAR_ENV=sandbox # Switch to 'production' when ready

# Application URL (for frontend use)
NEXT_PUBLIC_APP_URL=

# Polar Standard Plan
POLAR_STANDARD_PLAN=

# Inngest Signing Key (for authentication)
INNGEST_SIGNING_KEY=
# Inngest Event Key
INNGEST_EVENT_KEY=

# Inngest Development Mode (0 = disabled, 1 = enabled)
INNGEST_DEV=0

# Anthropic API Key
ANTHROPIC_API_KEY=